<!DOCTYPE html>
<html lang="en">

<head>
    <title><% if (user[0]) { %>
        Update User
        <% } else { %>
        Add User
        <% } %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

<body>
    <% if (user[0]) { %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-offset-3">
                <center>
                    <h1>Update User</h1>
                </center>
                <form action="/updateUser" method="post">
                    <input type="hidden" id="id" value="<%=user[0].id%>" class="form-control" name="id">

                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="name">Name: </label>
                                <input type="text" id="name" value="<%=user[0].name%>" class="form-control" name="name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email: </label>
                                <input type="text" id="email" value="<%=user[0].email%>" class="form-control"
                                    name="email">
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone: </label>
                                <input type="text" id="phone" value="<%=user[0].contact_number%>" class="form-control"
                                    name="phone">
                            </div>
                            <div class="form-group">
                                <label for="city">City: </label>
                                <select class="form-control" name="city">
                                    <% for (var i = 0 ; i < city.length ; i++) { %>
                                    <option <%= (city[i].id == user[0].city) ? "selected" : "" %>
                                        value="<%= city[i].id %>"><%= city[i].name %></option>
                                    <% } %>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } else { %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-offset-3">
                <center>
                    <h1>Add User</h1>
                </center>
                <form action="/addUser" method="post">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="name">Name: </label>
                                <input type="text" id="name" class="form-control" name="name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email: </label>
                                <input type="text" id="email" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone: </label>
                                <input type="text" id="phone" class="form-control" name="phone">
                            </div>
                            <div class="form-group">
                                <label for="city">City: </label>
                                <select class="form-control" name="city">
                                    <% for (var i = 0 ; i < city.length ; i++) { %>
                                    <option value="<%= city[i].id %>"><%= city[i].name %></option>
                                    <% } %>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success">Add</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } %>
</body>

</html>